<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ctrls="clr-namespace:FlipView.Controls;assembly=FlipView"
             x:Class="FlipView.Page1">


  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">

    <ctrls:Flip ItemsSource="{Binding Imgs}" HeightRequest="200">
      <ctrls:Flip.ItemTemplate>
        <DataTemplate>
          <!--<Image Source="{Binding .}" Aspect="AspectFill" />-->
          <Grid>
            <Image Source="{Binding Key}" Aspect="AspectFill" />
            <Label Text="{Binding Value}" TextColor="White" />
          </Grid>
          <!--<StackLayout>
            <Image Source="{Binding .}" Aspect="AspectFill" />
            <Label Text="AAA" />
          </StackLayout>-->
        </DataTemplate>
      </ctrls:Flip.ItemTemplate>
    </ctrls:Flip>
  </StackLayout>

</ContentPage>